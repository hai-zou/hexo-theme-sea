<section class="sea-post-list">
  {% for post in page.posts.toArray() %}
    <div class="sea-post-item">
      <h2 class="sea-post-title">
        <a class="sea-post-link" href="{{ url_for(post.path) }}">
          {{ truncate(post.title, {length: 120, separator: ' '}) }}
        </a>
      </h2>
      <div class="sea-post-line"></div>
      <div class="sea-post-abstract">
        {% set content = truncate(post.content, {length: 300, separator: ' '}) %}
        {{ strip_html(content) }}
      </div>
      <div class="sea-post-meta">
        {{ partial('partial/post_date', {post_date: post.date}) }}
        {{ partial('partial/post_categories', {post_categories: post.categories}) }}
        {{ partial('partial/post_tags', {post_tags: post.tags}) }}
      </div>
      {% if post.sticky %}
        <div class="sea-post-top-flag">
          {{ partial('partial/icon_top') }}
        </div>
      {% endif %}
    </div>
  {% endfor %}

  {{ partial('partial/pagination') }}
</section>