<div class="sea-page-card-wrapper">
  <h1 class="sea-page-card-title">
    {{ __('page.categories') }}
  </h1>

  <div class="sea-page-categories">
    {% for cateItem in site.categories.toArray() %}
      <a
        class="sea-page-categories__item sea-hover-list-item"
        href="{{ url_for(cateItem.path) }}"
      >
        {{ partial('svg/folder') }}
        <span class="name">{{ cateItem.name }}</span>
        <span class="num">{{ cateItem.length}}</span>
      </a>
    {% endfor %}
  </div>
</div>